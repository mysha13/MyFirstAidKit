<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="10dp"
    android:padding="10dp"
    card_view:cardBackgroundColor="#c4e1e9"
    card_view:cardCornerRadius="12dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <!--card_view:contentPadding="4dp"
    card_view:cardElevation="3dp"-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/base">


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_id_item"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:textSize="8dp"
            android:visibility="invisible" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_code_item"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:textSize="8dp"
            android:visibility="invisible" />

        <ImageView
            android:background="@drawable/image_border"
            android:id="@+id/imageView_oneMedicineItem"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_rowSpan="5"
            android:src="@drawable/ic_photo_camera_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/line1"
            android:weightSum="2"
            app:layout_constraintLeft_toRightOf="@+id/imageView_oneMedicineItem"
            app:layout_constraintStart_toEndOf="@id/imageView_oneMedicineItem"
            app:layout_constraintRight_toLeftOf="@+id/btn_update_item">

            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtview_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/oneInformationMedicine_txt_name"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_name_item"
                android:layout_columnSpan="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Nazwa edit"
                android:textSize="12dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_update_item"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_rowSpan="2"
            android:text="Edytuj"
            android:textSize="10dp"
            app:layout_constraintRight_toRightOf="@+id/base"/>


        <LinearLayout
            android:id="@+id/line2"
            android:weightSum="2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imageView_oneMedicineItem"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            app:layout_constraintRight_toLeftOf="@+id/btn_update_item">

            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtview_expdate"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/oneInformationMedicine_txt_exp"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_expdate_item"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="02/01/2020"
                android:textSize="12dp" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_delete_item"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_rowSpan="2"
            android:text="Usuń"
            android:textSize="10dp"
            app:layout_constraintRight_toRightOf="@+id/base"
            app:layout_constraintTop_toBottomOf="@+id/btn_update_item"/>

        <LinearLayout
            android:id="@+id/line3"
            android:weightSum="2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imageView_oneMedicineItem"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            app:layout_constraintRight_toLeftOf="@+id/btn_delete_item">

            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtview_form"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/oneInformationMedicine_txt_form"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_form_item"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Tabletki powlekane"
                android:textSize="12dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_moreInfo_item"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_rowSpan="2"
            android:text="Więcej >>"
            android:textSize="10dp"
            app:layout_constraintRight_toRightOf="@+id/base"
            app:layout_constraintTop_toBottomOf="@+id/btn_delete_item"/>

        <LinearLayout
            android:id="@+id/line4"
            android:weightSum="2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imageView_oneMedicineItem"
            app:layout_constraintTop_toBottomOf="@+id/line3"
            app:layout_constraintRight_toLeftOf="@+id/btn_delete_item">
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtview_sickness"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/oneInformationMedicine_txt_disease"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_purpose_item"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="katar"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line5"
            android:weightSum="2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imageView_oneMedicineItem"
            app:layout_constraintTop_toBottomOf="@+id/line4"
            app:layout_constraintRight_toLeftOf="@+id/btn_moreInfo_item">
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtview_numberofmedicine"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/oneInformationMedicine_txt_number"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_amount_item"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="5 opakowań"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line6"
            android:weightSum="2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imageView_oneMedicineItem"
            app:layout_constraintTop_toBottomOf="@+id/line5"
            app:layout_constraintRight_toLeftOf="@+id/btn_moreInfo_item">

            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtview_power"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Moc"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_poweronemed_item"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:hint="200mg"
                android:textSize="12dp" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>