<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/base">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_idtakeMed_item"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:textSize="1dp"
            android:visibility="invisible" />

        <ImageView
            android:background="@drawable/image_border"
            android:id="@+id/imageView_takenMed_item"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:maxHeight="90dp"
            android:maxWidth="80dp"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line1"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="110dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/oneInformationMedicine_txt_name"
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:id="@+id/txtview_name_item"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:id="@+id/tv_takenMed_name_item"
                android:layout_columnSpan="2"
                android:textSize="16dp"
                android:text="@string/emptyfields" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line2"
            android:weightSum="2"
            android:layout_marginLeft="110dp"
            android:layout_below="@+id/line1">

            <TextView
                android:id="@+id/txtview_power_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="@string/addMedicine_txt_power"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_takenMed_power_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/emptyfields"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line3"
            android:layout_marginLeft="110dp"
            android:layout_below="@+id/line2">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:text="@string/oneInformationMedicine_txt_number"
                android:id="@+id/txtview_numberofmedicine"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:text="@string/emptyfields"
                android:layout_gravity="center"
                android:layout_columnSpan="1"
                android:id="@+id/tv_takenMed_amount_item"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:text="@string/emptyfields"
                android:layout_columnSpan="1"
                android:id="@+id/tv_takenMed_amountform_item"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line4"
            android:weightSum="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageView_takenMed_item">

            <Button
                android:background="@drawable/button_shape"
                android:layout_weight="1"
                android:id="@+id/btn_takeMen_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:text="@string/takeMed_txt_takeMed"
                android:textSize="14dp"/>

            <Button
                android:background="@drawable/button_shape"
                android:layout_weight="1"
                android:id="@+id/btn_editamount_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:text="Edytuj ilość"
                android:textSize="14dp"/>

        </LinearLayout>

    </RelativeLayout>






</android.support.v7.widget.CardView>