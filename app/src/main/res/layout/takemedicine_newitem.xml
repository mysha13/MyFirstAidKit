<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="20dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="12dp"
    app:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >


<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/base">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tv_idtakeMed_item"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="3dp"
        android:textSize="8dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView_takenMed_item"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_rowSpan="5"
        android:background="@drawable/image_border"
        android:src="@drawable/ic_photo_camera_black_24dp"
        app:layout_constraintTop_toTopOf="@+id/base"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/base"
        android:layout_marginLeft="5dp"
        />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:weightSum="2"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView_takenMed_item"
        app:layout_constraintRight_toLeftOf="@+id/btn_takeMen_item">

        <TextView

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/oneInformationMedicine_txt_name"
            android:textSize="16dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:id="@+id/txtview_name_item"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/tv_takenMed_name_item"
            android:layout_columnSpan="2"
            android:textSize="16dp"
            android:text="Nazwa edit" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_takeMen_item"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_rowSpan="2"
        android:text="Zażyj"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="@+id/base"/>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:weightSum="2"
        app:layout_constraintRight_toLeftOf="@+id/btn_takeMen_item"
        app:layout_constraintStart_toEndOf="@+id/imageView_takenMed_item"
        app:layout_constraintTop_toBottomOf="@+id/line1">

        <TextView
            android:id="@+id/txtview_power_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Moc"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_takenMed_power_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Moc edit"
            android:textSize="16dp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_editamount_item"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_rowSpan="2"
        android:text="Edytuj \nilość"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="@+id/base"
        app:layout_constraintTop_toBottomOf="@+id/btn_takeMen_item"/>

    <LinearLayout
        android:id="@+id/line3"
        android:weightSum="3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/imageView_takenMed_item"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintRight_toLeftOf="@+id/btn_editamount_item">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="@string/oneInformationMedicine_txt_number"
            android:id="@+id/txtview_numberofmedicine"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="5"
            android:layout_gravity="center"
            android:layout_columnSpan="1"
            android:id="@+id/tv_takenMed_amount_item"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="opakowań"
            android:layout_columnSpan="1"
            android:id="@+id/tv_takenMed_amountform_item"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>



