<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elasz.myfirstaidkit.OneMedicineInformation">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="6"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_rowSpan="6"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            app:srcCompat="@drawable/ic_menu_camera" />

        <TextView
            android:text="@string/oneInformationMedicine_txt_name"
            android:textSize="10dp"
            android:layout_marginTop="3dp"
            android:id="@+id/txtview_name"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/txt_name"
            android:layout_columnSpan="1"
            android:textSize="10dp"
            android:text="Nazwa edit" />

        <Button
            android:layout_width="74dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_rowSpan="2"
            android:textSize="7dp"
            android:text="Edytuj" />
        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:text="@string/oneInformationMedicine_txt_exp"
            android:id="@+id/txtview_expdate"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:text="02/01/2020"
            android:textSize="10dp"
            android:id="@+id/txt_expdate"/>

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:text="@string/oneInformationMedicine_txt_form"
            android:id="@+id/txtview_form"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:text="Tabletki powlekane"
            android:textSize="10dp"
            android:id="@+id/txt_form"/>

        <Button
            android:layout_width="74dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_rowSpan="2"
            android:textSize="7dp"
            android:text="Usuń" />

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:text="@string/oneInformationMedicine_txt_disease"
            android:id="@+id/txtview_sickness"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:text="katar"
            android:textSize="10dp"
            android:id="@+id/txt_sickness"/>

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:text="@string/oneInformationMedicine_txt_number"
            android:id="@+id/txtview_numberofmedicine"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:text="5 opakowań"
            android:id="@+id/txt_numberOfMedicine"/>

        <!--<CheckBox
            android:layout_marginTop="2dp"
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_column="3"
            android:layout_row="2"
            android:text="@string/oneInformationMedicine_checkb_taken"
            android:layout_columnSpan="1"
            android:textSize="10dp" />-->

        <Button
            android:layout_width="74dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:textSize="7dp"
            android:layout_rowSpan="2"
            android:text="Więcej >>"
           />

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:text="Moc"
            android:id="@+id/txtview_power"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:text="200mg"
            android:id="@+id/tv_power"/>
    </GridLayout>

</LinearLayout>
