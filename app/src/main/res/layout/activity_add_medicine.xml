<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.elasz.myfirstaidkit.AddMedicine">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:verticalSpacing="1dp"
            android:horizontalSpacing="5dp"
            android:padding="10dp"
            android:columnCount="4"
            android:rowCount="20">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_columnSpan="1"
                android:layout_marginLeft="5dp"
                android:layout_rowSpan="4"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_menu_camera" />

            <Button
                android:id="@+id/btn_scanBarcode"
                android:layout_columnSpan="3"
                android:textAlignment="center"
                android:text="@string/addMedicine_btn_scanCode"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txtview_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="@string/popular_name"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txt_name"
                android:layout_width="153dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:hint="Nazwa edit"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtview_expdate"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="@string/popular_exp"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_expdate"
                android:layout_width="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="3dp"
                android:text="02/01/2020"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtview_opendate"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="@string/addMedicine_txt_opened"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_opendate"
                android:layout_width="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="3dp"
                android:text="02/01/2019"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtview_form"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/popular_form"
                android:layout_gravity="left|center_vertical"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <!--<TextView
                android:id="@+id/txt_form"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Tabletki powlekane"
                android:textSize="13dp" />-->

            <ExpandableListView
                android:id="@+id/spin_form"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_columnSpan="3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="right"
                android:textSize="16dp"></ExpandableListView>


            <TextView
                android:id="@+id/txtview_sickness"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/popular_disease"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textSize="18dp" />


            <ExpandableListView
                android:id="@+id/spin_sickness"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_columnSpan="3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="right"
                android:textSize="16dp"></ExpandableListView>

            <TextView
                android:id="@+id/txtview_numberofmedicine"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/popular_number"
                android:layout_gravity="left|center_vertical"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txt_numberOfMedicine"
                android:layout_marginLeft="10dp"
                android:hint="Liczba"
                android:layout_gravity="center_horizontal|center"
                android:textSize="16dp" />

            <!--<TextView
                android:id="@+id/txt_numberOfMedicine"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="5 "
                android:textSize="13dp" />-->

           <!-- <TextView
                android:id="@+id/txt_formOfMedicine"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="opakowań"
                android:textSize="13dp" />-->

            <ExpandableListView
                android:id="@+id/spin_formOfMedicine"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"
                android:textSize="16dp"></ExpandableListView>

            <TextView
                android:id="@+id/txtview_person"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_columnSpan="2"
                android:text="@string/addMedicine_txt_forperson"
                android:layout_gravity="left|center_vertical"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <ExpandableListView
                android:id="@+id/spin_person"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="right"
                android:textSize="16dp"></ExpandableListView>

            <TextView
                android:id="@+id/txtview_subsPower"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_columnSpan="2"
                android:text="@string/addMedicine_txt_power"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txt_subsPower"
                android:layout_width="155dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:hint="Dawka"
                android:textSize="16dp" />



            <TextView
                android:id="@+id/txtview_subsActive"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_columnSpan="2"
                android:text="@string/addMedicine_txt_activeSubs"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <!--<TextView
                android:id="@+id/txt_subsActive"
                android:layout_width="155dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Nazwa edit"
                android:textSize="13dp"
                />-->
            <EditText
                android:id="@+id/txt_subsActive"
                android:layout_width="155dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:hint="Substancje czynne"
                android:textSize="16dp" />



            <TextView
                android:id="@+id/txtview_codeATC"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_columnSpan="2"
                android:text="@string/addMedicine_txt_code"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txt_codeATC"
                android:layout_width="153dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:hint="BARCODE"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtview_responsibleObject"
                android:layout_marginLeft="10dp"
                android:layout_width="153dp"
                android:layout_marginTop="3dp"
                android:layout_columnSpan="2"
                android:text="@string/addMedicine_txt_producer"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txt_responsibleObject"
                android:layout_width="153dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:hint="Odpowiedzialny"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtview_idmedicine"
                android:layout_marginLeft="10dp"
                android:layout_width="153dp"
                android:layout_columnSpan="2"
                android:text="@string/addMedicine_txt_note"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txt_idOfMedicine"
                android:layout_width="154dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:hint="Natatka dodatkowa, własna"
                android:textSize="16dp" />


        </GridLayout>

    </ScrollView>
</LinearLayout>
