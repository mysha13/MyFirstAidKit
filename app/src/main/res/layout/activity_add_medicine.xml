<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/baseLayout"
    tools:context="com.example.elasz.myfirstaidkit.AddMedicine">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:columnCount="4"
            android:horizontalSpacing="5dp"
            android:padding="5dp"
            android:rowCount="20"
            android:verticalSpacing="1dp">

            <TextView
                android:layout_columnSpan="4"
                android:id="@+id/tv_id_allinfo"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:background="@drawable/image_border"
                android:id="@+id/imageView_add"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_columnSpan="1"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_rowSpan="3"
                android:scaleType="fitXY"
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                app:srcCompat="@drawable/ic_menu_camera" />

            <Button
                android:background="@drawable/button_shape"
                android:id="@+id/btn_scanBarcode_add"
                android:layout_width="wrap_content"
                android:layout_columnSpan="3"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="@string/addMedicine_btn_scanCode"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txtview_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="@string/popular_name"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_name_add"
                android:layout_width="153dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:hint="Nazwa edit"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtview_expdate"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="@string/popular_exp"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_expdate_add"
                android:layout_width="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:hint="@string/popular_date"
                android:textSize="16dp" />

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_columnSpan="1"
    android:orientation="horizontal"
    android:layout_gravity="center">

    <android.support.design.widget.FloatingActionButton
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:id="@+id/btn_removePhoto"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/ic_cancel_black_24dp"
        android:scaleType="center"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:id="@+id/btn_addPhoto"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
        android:scaleType="center"/>

</LinearLayout>

            <TextView
                android:id="@+id/txtview_opendate"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:text="@string/addMedicine_txt_opened"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_opendate_add"
                android:layout_width="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:hint="@string/popular_date"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtview_form"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/popular_form"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <!--<TextView
                android:id="@+id/txt_form"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Tabletki powlekane"
                android:textSize="13dp" />-->

            <Spinner
                android:id="@+id/spin_form_add"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_columnSpan="3"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="16dp"></Spinner>


            <TextView
                android:id="@+id/txtview_purpose"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:text="@string/popular_disease"
                android:textColor="@android:color/black"
                android:textSize="18dp" />


            <Spinner
                android:id="@+id/spin_purpose_add"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_columnSpan="3"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="16dp"></Spinner>

            <TextView
                android:id="@+id/txtview_numberofmedicine"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/popular_number"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_amount_add"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="10dp"
                android:hint="@string/addMedicine_et_number"
                android:textSize="16dp"
                android:inputType="number"/>

            <!--<TextView
                android:id="@+id/txt_numberOfMedicine"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="5 "
                android:textSize="13dp" />-->

            <!-- <TextView
                android:id="@+id/txt_formOfMedicine"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="opakowaÅ„"
                android:textSize="13dp" />-->

            <Spinner
                android:id="@+id/spin_amountform_add"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_columnSpan="2"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"></Spinner>

            <TextView
                android:id="@+id/txtview_person"
                android:layout_columnSpan="2"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/addMedicine_txt_forperson"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/spin_person_add"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_columnSpan="2"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:textSize="16dp"></Spinner>

            <TextView
                android:id="@+id/txtview_subsPower"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/addMedicine_txt_power"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_power_add"
                android:layout_width="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="3dp"
                android:hint="@string/addMedicine_et_power"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/txtview_subsActive"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/addMedicine_txt_activeSubs"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <!--<TextView
                android:id="@+id/txt_subsActive"
                android:layout_width="155dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Nazwa edit"
                android:textSize="13dp"
                />-->
            <EditText
                android:id="@+id/et_subsActive_add"
                android:layout_width="155dp"
                android:layout_columnSpan="2"
                android:layout_marginTop="3dp"
                android:hint="@string/addMedicine_txt_activeSubs"
                android:textSize="16dp"
                />


            <TextView
                android:id="@+id/txtview_codeATC"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/addMedicine_txt_code"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_code_add"
                android:layout_width="153dp"
                android:layout_columnSpan="2"
                android:layout_marginTop="3dp"
                android:hint="@string/addMedicine_et_barcode"
                android:textSize="16dp"
                android:inputType="number"/>

            <TextView
                android:id="@+id/txtview_responsibleObject"
                android:layout_width="153dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/addMedicine_txt_producer"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_producer_add"
                android:layout_width="153dp"
                android:layout_columnSpan="2"
                android:layout_marginTop="3dp"
                android:hint="@string/addMedicine_txt_producer"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtview_note"
                android:layout_width="153dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:text="@string/addMedicine_txt_note"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_note_add"
                android:layout_width="154dp"
                android:layout_columnSpan="2"
                android:layout_marginTop="3dp"
                android:hint="@string/addMedicine_et_note"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtview_istaken"
                android:layout_width="153dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:text="@string/addMedicine_txt_istake"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/cb_istaken"/>

            <Button
                android:id="@+id/btn_saveAddedMedicine_add"
                android:text="@string/addMedicine_btn_addMed"
                android:layout_columnSpan="4"
                android:textSize="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_shape"
                android:layout_width="match_parent"/>


        </GridLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
