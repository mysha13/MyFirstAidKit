<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="5"
    android:rowCount="4"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView_takenMed_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_rowSpan="4"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:src="@drawable/ic_photo_camera_black_24dp" />

    <TextView
        android:text="@string/oneInformationMedicine_txt_name"
        android:textSize="10dp"
        android:layout_marginTop="3dp"
        android:id="@+id/txtview_name_item"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_takenMed_name_item"
        android:layout_columnSpan="2"
        android:textSize="10dp"
        android:text="Nazwa edit" />

    <Button
        android:id="@+id/btn_takeMen_item"
        android:layout_width="74dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_rowSpan="2"
        android:textSize="7dp"
        android:text="Zażyj" />

    <TextView
        android:text="Moc"
        android:textSize="10dp"
        android:layout_marginTop="3dp"
        android:id="@+id/txtview_power_item"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_takenMed_power_item"
        android:layout_columnSpan="2"
        android:textSize="10dp"
        android:text="Moc edit" />

    <TextView
        android:textColor="@android:color/black"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:text="@string/oneInformationMedicine_txt_number"
        android:id="@+id/txtview_numberofmedicine"/>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:text="5 "
        android:layout_gravity="center"
        android:layout_columnSpan="1"
        android:id="@+id/tv_takenMed_amount_item"/>
    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:text="opakowań"
        android:layout_columnSpan="1"
        android:id="@+id/tv_takenMed_form_item"/>
    <Button
        android:id="@+id/btn_decancelMed_item"
        android:layout_width="74dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:layout_rowSpan="2"
        android:textSize="7dp"
        android:text="Anuluj" />

    <TextView
        android:textColor="@android:color/black"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:layout_columnSpan="1"
        android:text="Zażyj"
        android:id="@+id/txtview_takeText"/>

    <EditText
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:textSize="10dp"
        android:id="@+id/et_takenMed_amount_item"/>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:text="opakowań"
        android:layout_columnSpan="1"
        android:id="@+id/tv_takenMed_amountForm_item"/>


</GridLayout>